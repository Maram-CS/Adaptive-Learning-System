<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Sign Up - Eduphin</title>
    <!-- Font Awesome للأيقونات -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- نفس ملف CSS -->
    <link rel="stylesheet" href="/Style/Register.css"> 
</head>
<body>

<div class="auth-wrapper">
    <!-- قسم التسجيل -->
    <div class="credentials-panel signup">
        <h2 class="slide-element">Sign Up</h2>

        <form id="signupForm">
            <div class="field-wrapper slide-element">
                <input type="text" required name="username">
                <label>Username</label>
                <i class="fas fa-user"></i>
            </div>

            <div class="field-wrapper slide-element">
                <input type="email" required name="email">
                <label>Email</label>
                <i class="fas fa-envelope"></i>
            </div>


<div class="field-wrapper slide-element">
    <select name="role" id="role" required>
        <option value="" disabled selected></option> <!-- فارغ -->
        <option value="student">Student</option>
        <option value="teacher">Teacher</option>
        <option value="admin">Admin</option>
    </select>
    <label for="role">I am a</label> <!-- التسمية رجعت -->
    <i class="fas fa-user-graduate"></i>
</div>

            <div class="field-wrapper slide-element">
                <input type="password" required name="password">
                <label>Password</label>
                <i class="fas fa-lock"></i>
            </div>

            <button type="submit" class="submit-button slide-element">
                Sign Up
            </button>

            <div class="switch-link slide-element">
                Already have an account? 
                <br>
                <a href="/App/login">Login</a>
            </div>
        </form>
    </div>

    <!-- قسم الترحيب -->
    <div class="welcome-section signup">
        <h2 class="slide-element">Join Us!</h2>
        <p class="slide-element">
            Create your account and start your learning journey with Eduphin.
        </p>
    </div>

    <!-- الأشكال الخلفية -->
    <div class="background-shape"></div>
    <div class="secondary-shape"></div>
</div>

<!-- الفوتر -->
<div class="footer">
    © 2026 Eduphin. All rights reserved.
</div>

<script>
    document.getElementById('signupForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        // جمع البيانات
        const username = document.querySelector('input[name="username"]').value;
        const email = document.querySelector('input[name="email"]').value;
        const password = document.querySelector('input[name="password"]').value;
        const role = document.getElementById('role').value;
        
        // التحقق من إختيار الدور
        if (!role) {
            alert('❌ الرجاء اختيار دورك (طالب أو أستاذ)');
            return;
        }
        
        // التحقق من المدخلات
        if (username && email && password) {
            alert(`✅ تم التسجيل بنجاح!\n\nالاسم: ${username}\nالبريد: ${email}\nالدور: ${role === 'teacher' ? 'أستاذ' : 'طالب'}`);
            // هنا تقدر ترسل البيانات للسيرفر
            // window.location.href = 'login.html';
        } else {
            alert('❌ الرجاء ملء جميع الحقول');
        }
    });
</script>

</body>
</html>